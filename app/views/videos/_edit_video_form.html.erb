<div class="container edit-text-form-container">
    <div class="row">
        <!-- ============================================================== -->
        <!-- validation form -->
        <!-- ============================================================== -->
        <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
            <div class="card">
                <h5 class="card-header">Edit video form</h5>
                <div class="card-body">
                    <%= form_for( @video, url: video_path, class: "needs-validation", remote: true, method: :put, :html => {:novalidate => 'novalidate'}) do |f| %>
                        <div class="row">
                            <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12 ">
                                <label for="validationCustom01">Video URL</label>
                                <%= f.text_field :url, id: "validationCustom01", class: "form-control", placeholder: "URL", required: true %>
                                <div class="valid-feedback">
                                    Looks good!
                                </div>
                            </div>
                            <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12 ">
                                <label for="validationCustom01">Video title</label>
                                <%= f.text_field :name, id: "validationCustom01", class: "form-control", placeholder: "Title", required: true %>
                                <div class="valid-feedback">
                                    Looks good!
                                </div>
                            </div>
                            <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12 ">
                                <label for="validationCustom01">Video description</label>
                                <%= f.text_area :description, size: "60x12", id: "validationCustom01", class: "form-control", placeholder: "Description", required: true %>
                                <div class="valid-feedback">
                                    Looks good!
                                </div>
                            </div>
                            <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12 button-space">
                                <%= f.submit 'Edit video', class: "btn btn-primary" %>
                            </div>
                        </div>
                    <% end %>
                </div>
            </div>
        </div>
        <!-- ============================================================== -->
        <!-- end validation form -->
        <!-- ============================================================== -->
    </div>
</div>