    <div class="home">
		<div class="background_image" style="background-image:url(<%= asset_path 'services.jpg'%>)"></div>
		<div class="overlay"></div>
		<div class="home_container">
			<div class="container">
				<div class="row">
					<div class="col">
						<div class="home_content">
							<div class="home_title">Services</div>
							<div class="home_subtitle">Pilates, Yoga, Fitness, Spinning & many more</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>

	<!-- Services -->

	<div class="services">
		<div class="container">
			<div class="row">
				<div class="col">
					<div class="section_title_container">
						<div class="section_subtitle">welcome to sportfit</div>
						<div class="section_title">Our Courses</div>
					</div>
				</div>
			</div>
			<div class="row services_row">
				<% @courses.each do |course| %>
					<!-- Service -->
					<div class="col-xl-4 col-md-6 service_col">
						<div class="service">
							<div class="service_title_container d-flex flex-row align-items-center justify-content-start">
								<div><div class="service_icon"><%= image_tag "images/icon_4.png"%></div></div>
								<div class="service_title"><%= course.name %></div>
							</div>
							<div class="service_text">
								<p><%= course.description %></p>
							</div>
						</div>
					</div>
				<% end %>
			</div>
		</div>
	</div>

	<!-- Timetable -->

	<div class="timetable">
		<div class="parallax_background parallax-window" data-parallax="scroll" data-image-src="<%= asset_path 'timetable.jpg'%>" data-speed="0.8"></div>
		<div class="tt_overlay"></div>
		<div class="container">
			<div class="row">
				<div class="col">
					<div class="section_title_container">
						<div class="section_subtitle">welcome to sportfit</div>
						<div class="section_title">Classes Timetable</div>
					</div>
					<div class="timetable_filtering">
						<ul class="d-flex flex-row align-items-start justify-content-start flex-wrap">
							<li class="active item_filter_btn" data-filter="*">All Classes</li>
							<% @courses.each do |course|%>
								<li class="item_filter_btn" data-filter=".<%= course.name%>"><%= course.name %></li>
							<% end %>
						</ul>
					</div>
					<div class="timetable_container d-flex flex-sm-row flex-column align-items-start justify-content-sm-between justify-content-start">

						<!-- Monday -->
                    <div class="tt_day">
                        <div class="tt_title">monday</div>
                        <div class="tt_day_content grid">
                            <% @monday.each do |day| %>
                                <!-- Class -->
                                    <div class="tt_class grid-item <%if day.course != nil%><%= day.course.name %><%end%>">
                                        <% if day.course == nil %>
                                            <div class="tt_class_title class-name">No class or session assigned</div>
                                        <% else %>
                                            <div class="tt_class_title class-name"><%= day.course.name %></div>
                                        <% end %>
                                        <div class="tt_class_time"><%= day.hour %>h</div>
                                    </div>
                            <% end %>
                        </div>
                    </div>

                    <!-- Tuesday -->
                    <div class="tt_day">
                        <div class="tt_title">tuesday</div>
                        <div class="tt_day_content grid">
                            <% @tuesday.each do |day| %>
                                <!-- Class -->    
                                    <div class="tt_class grid-item <%if day.course != nil%><%= day.course.name %><%end%>">
                                        <% if day.course == nil %>
                                            <div class="tt_class_title class-name">No class or session assigned</div>
                                        <% else %>
                                            <div class="tt_class_title class-name"><%= day.course.name %></div>
                                        <% end %>
                                        <div class="tt_class_time"><%= day.hour %>h</div>
                                    </div>
                            <% end %>

                        </div>
                    </div>

                    <!-- Wednesday -->
                    <div class="tt_day">
                        <div class="tt_title">wednesday</div>
                        <div class="tt_day_content grid">

                            <% @wednesday.each do |day| %>
                                <!-- Class -->    
                                    <div class="tt_class grid-item <%if day.course != nil%><%= day.course.name %><%end%>">
                                        <% if day.course == nil %>
                                            <div class="tt_class_title class-name">No class or session assigned</div>
                                        <% else %>
                                            <div class="tt_class_title class-name"><%= day.course.name %></div>
                                        <% end %>
                                        <div class="tt_class_time"><%= day.hour %>h</div>
                                    </div>
                            <% end %>
                        </div>
                    </div>

                    <!-- Thursday -->
                    <div class="tt_day">
                        <div class="tt_title">thursday</div>
                        <div class="tt_day_content grid">
                            <% @thursday.each do |day| %>
                                <!-- Class -->    
                                    <div class="tt_class grid-item <%if day.course != nil%><%= day.course.name %><%end%>">
                                        <% if day.course == nil %>
                                            <div class="tt_class_title class-name">No class or session assigned</div>
                                        <% else %>
                                            <div class="tt_class_title class-name"><%= day.course.name %></div>
                                        <% end %>
                                        <div class="tt_class_time"><%= day.hour %>h</div>
                                    </div>
                            <% end %>
                        </div>
                    </div>

                    <!-- Friday -->
                    <div class="tt_day">
                        <div class="tt_title">friday</div>
                        <div class="tt_day_content grid">
                            <% @friday.each do |day| %>
                                <!-- Class -->    
                                    <div class="tt_class grid-item <%if day.course != nil%><%= day.course.name %><%end%>">
                                        <% if day.course == nil %>
                                            <div class="tt_class_title class-name">No class or session assigned</div>
                                        <% else %>
                                            <div class="tt_class_title class-name"><%= day.course.name %></div>
                                        <% end %>
                                        <div class="tt_class_time"><%= day.hour %>h</div>
                                    </div>
                            <% end %>
                        </div>
                    </div>
					</div>
				</div>
			</div>
		</div>
	</div>

	<!-- Extra -->

	<div class="extra d-flex flex-column align-items-center justify-content-center text-center">
		<div class="background_image" style="background-image:url(<%= asset_path 'extra_wide.jpg' %>)"></div>
		<div class="container">
			<div class="row">
				<div class="col-md-6 offset-md-3">
					<div class="extra_content d-flex flex-column align-items-center justify-content-center text-center">
						<div class="extra_title">15% Discount</div>
